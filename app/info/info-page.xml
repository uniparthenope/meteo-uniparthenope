<Page loaded="pageLoaded" class="page" xmlns="http://www.nativescript.org/tns.xsd">
    <ActionBar class="blue_background_action_bar">
        <Label class="" text="Info" fontSize="20"></Label>
    </ActionBar>


    <ScrollView>
        <StackLayout orientation="vertical">
            <Image src="~/images/logo.png" horizontalAlignment="center" margin="20 20 20 20"></Image>
            <Label textAlignment="center" textWrap="true" text="{{_L('info_info')}}"></Label>
            <StackLayout orientation="horizontal" horizontalAlignment="center" marginTop="5">
                <Label text="{{_L('info_version')}}" marginRight="10"></Label>
                <Label text="{{version}}"></Label>
            </StackLayout>
            <Label textAlignment="center" textWrap="true" text="https://app.meteo.uniparthenope.it" marginTop="5" color="blue" tap="meteo_web"></Label>
            <Label textAlignment="center" textWrap="true" text="{{ _L('info_dipartimento') }}" marginTop="10"></Label>
            <Label textAlignment="center" textWrap="true" text="Team leader: Raffaele Montella" marginTop="10"></Label>
            <Label textAlignment="center" textWrap="true" text="{{ _L('info_sviluppatori') }}" marginTop="10"></Label>
            <Label textAlignment="center" textWrap="true" text="{{ _L('info_gestione_dati') }}" marginTop="10"></Label>
            <Label textAlignment="center" textWrap="true" text="{{ _L('info_logo') }}" marginTop="10"></Label>
            <Button textWrap="true" text="Copyright Â©" ontap="onTapCopy" class="blue_background_opac" margin="10 5 0 5"></Button>
            <Button textWrap="true" text="Disclaimer" ontap="onTapDisclaimer" class="blue_background_opac" margin="10 5 10 5"></Button>
        </StackLayout>
    </ScrollView>

</Page>
